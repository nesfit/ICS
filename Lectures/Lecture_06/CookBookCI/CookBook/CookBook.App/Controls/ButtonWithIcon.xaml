<UserControl x:Class="CookBook.App.Controls.ButtonWithIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="Root"
             MaxHeight="25">
    <Grid DataContext="{Binding ElementName=Root}" Background="Black">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseDown">
                <i:InvokeCommandAction Command="{Binding Command}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="White" BorderThickness="2"/>
        <Image Grid.Column="0" Source="{Binding IconSource}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3"/>
        <TextBlock Grid.Column="1" Text="{Binding TextContent}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10, 0"/>
    </Grid>
</UserControl>
